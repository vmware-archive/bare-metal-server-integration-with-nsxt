# Create an group that contains the Bare Metal Servers
[windows:children]
servers_static
servers_dhcp
servers_migration

# Set variables common for all Bare Metal Servers
[windows:vars]
ansible_user=
ansible_password=
ansible_connection=
ansible_winrm_server_cert_validation=ignore


# host group for servers
[servers_static]
10.117.5.191 static_ip= netmask= ls_name=

[servers_dhcp]
#10.117.5.191 ls_name=

[servers_migration]
#10.117.5.191 migrate_intf= ls_name=

[servers_restoration]
#10.117.5.191


