mkdir -p /opt/baremetal/
dependency=/opt/baremetal/miss-dependency
rm -rf $dependency
touch $dependency

{% for item in suse12_dependency %}
    echo {{ item }}
    output=$(rpm -qa |grep {{ item }})
    if [ ! -z "$output" ]; then
        echo "installed"
    else
        echo "no installed"
        echo {{ item }} >> $dependency
    fi
{% endfor %}

