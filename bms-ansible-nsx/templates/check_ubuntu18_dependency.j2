mkdir -p /opt/baremetal/
dependency=/opt/baremetal/miss-dependency
rm -rf $dependency
touch $dependency


{% for item in ubuntu18_dependency %}
    echo {{ item }}
    output=$(dpkg -l |awk '/[a-z]i/{print $2}'|grep {{ item }})
    if [ ! -z "$output" ]; then
        echo "installed"
    else
        echo "no installed"
        echo {{ item }} >> $dependency
    fi
{% endfor %}
